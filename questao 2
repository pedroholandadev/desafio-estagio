def contar_a(string):
    string_lower = string.lower()
    quantidade_a = string_lower.count('a')
    
    if quantidade_a > 0:
        print(f"A letra 'a' aparece {quantidade_a} vez(es) na string.")
    else:
        print("A letra 'a' n√£o aparece na string.")

texto = input("Informe uma string: ")
contar_a(texto)
